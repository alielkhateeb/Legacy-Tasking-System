	<link rel="icon" href="https://image.freepik.com/free-icon/home_318-42210.jpg" />
	
	<meta name="viewport" content="width=device-width">
	{block head}{/block}
</head>

<body>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

